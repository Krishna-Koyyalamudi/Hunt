<title>Reset Password</title>
</head>

<main>
    <%- include ('./header') %>
        <section class="d-flex align-items-center mx-auto mt-5 p-5 flex-column col-lg-4  shadow-lg rounded" style="background-color:white">
            <label class="text-center headText" style="font-size: 24px;font-family:  'Segoe UI', 'Open Sans', 'Helvetica Neue', sans-serif">Password Reset</label>
            <br>
            <br><br>
            <form>
                <input type="password" placeholder=" New Password" id="password" name="password" class="pl-2" style="border: none;border-bottom: 1px black solid;
                outline:none;
                background-color: white;
                width:20rem;"><br>
                <input type="password" placeholder="Confirm Password" id="newpassword" name="password" class="pl-2" style="border: none;border-bottom: 1px black solid;
                outline:none;
                background-color: white;
                width:20rem;"><br><br>
            </form>
            <form action="">
                <button type="submit" class="rounded-100  text-center" style="background-color: #00674c; color: white; padding: 0px;border-radius: 6px;align-self: center; height: 30px;width: 120px;justify-content: center;" value="rest" id="rest">Reset
                </button<br><br>
        </form>
        
    </section>
</main>